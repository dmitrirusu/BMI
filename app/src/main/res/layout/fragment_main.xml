<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        tools:context=".fragments.MainFragment">

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_personal_detail"
            android:textSize="26sp"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:id="@+id/appCompatTextView"/>

    <android.support.v7.widget.AppCompatEditText
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textInputLayout"
            android:background="@drawable/et_round_corners_gray"
            android:layout_width="match_parent"
            android:hint="@string/name"
            android:ellipsize="end"
            android:lines="1"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
            android:textSize="14sp"
            android:paddingRight="20dp"
            android:layout_height="50dp"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="@string/calculate_your_body_mass_index"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="70dp"
            android:textColor="@color/grayText"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            android:id="@+id/appCompatTextView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>


    <android.support.v7.widget.AppCompatTextView
            android:text="@string/weight"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:paddingRight="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2"
            android:id="@+id/appCompatTextView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/appCompatTextView3" android:layout_marginStart="8dp"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="@string/height"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2"
            android:id="@+id/appCompatTextView3"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/appCompatTextView5"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="@string/gender"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2" android:id="@+id/appCompatTextView5"
            app:layout_constraintStart_toEndOf="@+id/appCompatTextView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            app:cardCornerRadius="4dp"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView5"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="8dp">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frameLayout2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/frameLayout">
                <com.super_rabbit.wheel_picker.WheelPicker
                        android:id="@+id/picker_weight"
                        android:layout_centerInParent="true"
                        app:textSize="16sp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:fadingEdge="vertical"
                        app:selectedTextColor="@color/gradientEnd"
                        app:wheelItemCount="3"
                        android:layout_width="50dp"
                        android:layout_height="100dp"/>

                <View android:layout_marginTop="16dp"
                      android:layout_gravity="center"
                      android:background="@color/gradientEnd"
                      android:layout_width="50dp"
                      android:layout_height="3dp"/>

            </FrameLayout>

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/frameLayout"
                    app:layout_constraintStart_toEndOf="@+id/frameLayout2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/frameLayout3">
                <com.super_rabbit.wheel_picker.WheelPicker
                        android:id="@+id/picker_height"
                        android:layout_centerInParent="true"
                        app:textSize="16sp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:fadingEdge="vertical"
                        app:selectedTextColor="@color/gradientEnd"
                        app:wheelItemCount="3"
                        android:layout_width="50dp"
                        android:layout_height="100dp"/>

                <View android:layout_marginTop="16dp"
                      android:layout_gravity="center"
                      android:background="@color/gradientEnd"
                      android:layout_width="50dp"
                      android:layout_height="3dp"/>

            </FrameLayout>

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/frameLayout3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/frameLayout"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent">
                <com.super_rabbit.wheel_picker.WheelPicker
                        android:id="@+id/picker_gender"
                        android:layout_centerInParent="true"
                        app:textSize="16sp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:fadingEdge="vertical"
                        app:selectedTextColor="@color/gradientEnd"
                        app:wheelItemCount="3"
                        android:layout_width="50dp"
                        android:layout_height="100dp"/>

                <View android:layout_marginTop="16dp"
                      android:layout_gravity="center"
                      android:background="@color/gradientEnd"
                      android:layout_width="50dp"
                      android:layout_height="3dp"/>

            </FrameLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corners_and_gradient"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textAllCaps="false"
            android:foreground="?attr/selectableItemBackground"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/calculate"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>