<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        tools:context=".fragments.ResultFragment">

    <android.support.constraint.ConstraintLayout
            android:background="@drawable/rounded_corners_and_gradient"
            android:layout_width="match_parent"
            android:layout_margin="60dp"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="60dp"
            tools:layout_editor_absoluteX="60dp">

        <View android:id="@+id/separator1"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="32dp"
              android:background="@android:color/white"
              android:alpha=".25"
              android:layout_marginBottom="4dp"

              android:layout_width="match_parent"
              android:layout_height="1dp"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/body_maass"
                app:layout_constraintTop_toBottomOf="@id/separator1"
                app:layout_constraintBottom_toTopOf="@id/separator2"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:alpha=".25"
                android:text="@string/body_mass_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/separator2"
                app:layout_constraintTop_toBottomOf="@id/body_maass"
                android:background="@android:color/white"
                android:alpha=".25"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mass_index_whole_part"
                android:textColor="@android:color/white"
                android:textSize="62sp"
                tools:text="18"
                android:alpha=".75"
                android:textAlignment="textEnd"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/separator2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mass_index_decimal_part"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mass_index_decimal_part"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                tools:text=".61"
                android:alpha=".75"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/separator2"
                app:layout_constraintStart_toEndOf="@id/mass_index_whole_part"
                app:layout_constraintBottom_toBottomOf="@id/mass_index_whole_part"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="4dp"
                app:layout_constraintVertical_bias="1.0"/>

        <View
                android:id="@+id/mass_index_devider"
                app:layout_constraintTop_toBottomOf="@id/mass_index_whole_part"
                android:background="@android:color/white"
                android:layout_marginLeft="60dp"
                android:alpha=".70"
                android:layout_marginRight="60dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/result_message"
                tools:text="hello olivia, you are normal"
                android:textColor="@android:color/white"
                android:alpha=".90"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/mass_index_devider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/bmi_info_label"
                app:layout_constraintTop_toBottomOf="@id/result_message"
                android:text="@string/result_text"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:alpha=".70"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btn_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/btn_share"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:scaleType="fitCenter"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_rate"/>

        <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btn_rate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/btn_rate"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="100dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toEndOf="@+id/btn_share"
                app:layout_constraintHorizontal_bias="0.5"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>